{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "spotify_player",
  "title": "Spotify Player",
  "description": "Full Spotify Player for Raycast",
  "icon": "spotify-logo.png",
  "author": "reckoning-dev",
  "version": "1.0.0",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Spotify Player",
      "description": "Main Spotify Menu",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "clientId",
      "type": "password",
      "required": true,
      "title": "Client ID",
      "description": "Your clientId value from Spotify",
      "placeholder": "Enter your clientId"
    },
    {
      "name": "secret",
      "type": "password",
      "required": true,
      "title": "Client Secret",
      "description": "Your secret value from Spotify",
      "placeholder": "Enter your secret"
    },
    {
      "name": "refreshToken",
      "type": "password",
      "required": true,
      "title": "Refresh Token",
      "description": "Your refresh Token from Spotify",
      "placeholder": "Enter your refresh Token"
    },
    {
      "name": "country",
      "type": "textfield",
      "default": "US",
      "required": false,
      "title": "Your Country",
      "description": "Your Country, defaults to US",
      "placeholder": "Enter your country"
    }
  ],
  "devDependencies": {
    "@types/node": "^16.11.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "express": "^4.17.1",
    "fuse.js": "^6.4.6",
    "js-base64": "^3.7.2",
    "open": "^8.4.0",
    "spotify-web-api-node": "^5.0.2"
  },
  "scripts": {
    "dev": "ray develop",
    "build": "ray build -e dist"
  }
}
